{
    "name": "vstelmakh/twig-url-highlight",
    "description": "Twig filter to convert urls to html tags",
    "keywords": ["twig", "extension", "highlight", "url", "html"],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "twig/twig": "^1.38|^2|^3"
    },
    "require-dev" : {
        "phpunit/phpunit": "^8",
        "phpstan/phpstan": "^0.12.3",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "VStelmakh\\TwigUrlHighlightExtension\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VStelmakh\\TwigUrlHighlightExtension\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:phpcs": "vendor/bin/phpcs -n",
        "test:phpstan": "phpstan analyse --ansi --no-progress",
        "test:phpunit": "phpunit --colors=always",
        "test:all": [
            "@test:phpcs",
            "@test:phpstan",
            "@test:phpunit"
        ]
    },
    "scripts-descriptions": {
        "test:phpcs": "Run PHP Code Sniffer",
        "test:phpstan": "Run PHP Stan",
        "test:phpunit": "Run PHP Unit",
        "test:all": "Run all code analysis and tests"
    }
}
